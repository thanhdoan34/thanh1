<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#000"
        android:text="1234"
        android:textSize="50sp"
        android:textColor="#fff"
        android:gravity="right|bottom"
        android:layout_marginBottom="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF5722"
                android:text="c"
                android:textSize="40dp"
                android:textColor="#000"
                android:layout_marginRight="1dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF5722"
                android:text="+/-"
                android:textSize="40dp"
                android:textColor="#000"
                android:layout_marginRight="1dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF5722"
                android:text="%"
                android:textSize="40dp"
                android:textColor="#000"
                android:layout_marginRight="1dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF5722"
                android:text="/"
                android:textSize="40dp"
                android:textColor="#000"
                android:layout_marginRight="1dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#FF5722"
                android:gravity="center"
                android:text="7"
                android:textColor="#000"
                android:textSize="40dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#FF5722"
                android:gravity="center"
                android:text="8"
                android:textColor="#000"
                android:textSize="40dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#FF5722"
                android:gravity="center"
                android:text="9"
                android:textColor="#000"
                android:textSize="40dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#FF5722"
                android:gravity="center"
                android:text="x"
                android:textColor="#000"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#FF5722"
                android:gravity="center"
                android:text="4"
                android:textColor="#000"
                android:textSize="40dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#FF5722"
                android:gravity="center"
                android:text="5"
                android:textColor="#000"
                android:textSize="40dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#FF5722"
                android:gravity="center"
                android:text="6"
                android:textColor="#000"
                android:textSize="40dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#FF5722"
                android:gravity="center"
                android:text="-"
                android:textColor="#000"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#FF5722"
                android:gravity="center"
                android:text="1"
                android:textColor="#000"
                android:textSize="40dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#FF5722"
                android:gravity="center"
                android:text="2"
                android:textColor="#000"
                android:textSize="40dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#FF5722"
                android:gravity="center"
                android:text="3"
                android:textColor="#000"
                android:textSize="40dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#FF5722"
                android:gravity="center"
                android:text="+"
                android:textColor="#000"
                android:textSize="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="0"
                android:background="#FF5722"
                android:gravity="center"
                android:text="c"
                android:textColor="#000"
                android:textSize="40dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#FF5722"
                android:text="0"
                android:textSize="40dp"
                android:textColor="#000"
                android:layout_marginRight="1dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#FF5722"
                android:gravity="center"
                android:text="."
                android:textColor="#000"
                android:textSize="40dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#FF5722"
                android:gravity="center"
                android:text="="
                android:textColor="#000"
                android:textSize="40dp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>